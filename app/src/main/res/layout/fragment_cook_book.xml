<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

<TextView
    android:id="@+id/cookBook_title_textView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="CookBook"
    android:gravity="center_horizontal"
    android:textSize="40dp"
    />


    <Button
        android:layout_below="@+id/cookBook_title_textView"
        android:id="@+id/cookBook_addNewButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/cookBook_addNewButton"/>

    <ListView
        android:id="@+id/cookBook_listView"
        android:layout_below="@+id/cookBook_addNewButton"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </ListView>

</RelativeLayout>