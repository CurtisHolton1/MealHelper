<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1"
            android:fillViewport="false">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Meal Name"
    android:gravity="center"
    android:textSize="25dp"
    android:layout_weight="0.05"
    android:id="@+id/addMeal_textView"
    android:background="#888080"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/addMeal_mealName_EditText"
        android:layout_gravity="center_horizontal"
        android:singleLine="true"
        android:layout_below="@+id/addMeal_textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/addMeal_imageView"
        android:layout_below="@+id/addMeal_mealName_EditText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addMeal_cameraButton"
        android:id="@+id/addMeal_cameraButton"
        android:layout_below="@+id/addMeal_imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingredients"
        android:id="@+id/addMeal_textView2"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_below="@+id/addMeal_cameraButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#888080"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/addMeal_textView2"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:id="@+id/addMeal_ingredientTable">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Ingredient"
                android:id="@+id/addMeal_ingredientTable_textView"
                android:layout_column="0"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:id="@+id/addMeal_ingredientTable_textView2"
                android:layout_column="1"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Units"
                android:id="@+id/addMeal_ingredientTable_textView3"
                android:layout_column="2"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/addMeal_ingredientTable_editText"
                android:layout_column="3"
                android:layout_weight="1"/>

            <EditText
                android:singleLine="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/addMeal_ingredientTable_editText2"
                android:layout_column="4"
                android:layout_weight="1"/>

            <ExpandableListView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/addMeal_ingredientTable_expandableListView"
                android:layout_column="5"
                android:layout_weight="1"/>

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/checkBox"
                android:layout_column="6"/>
        </TableRow>
    </TableLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recipe"
            android:id="@+id/addMeal_textView3"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_below="@+id/addMeal_ingredientTable"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="#888080"/>

    </RelativeLayout>
</ScrollView>